<% layout('/layouts/boilerplate') -%>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>Create a New Listing</h3>
                <form method="POST" action="/listings" class="needs-validation" novalidate>
                    <div>
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" placeholder="Enter Tite" type="text" class="form-control" required>
                    </div><br>
                    <div>
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="Enter Description"
                            class="form-control" required></textarea>
                    </div><br>
                    <div>
                        <label for="image" class="form-label">Image Link</label>
                        <input name="listing[image]" placeholder="Enter Image URL/Link" type="text"
                            class="form-control" >
                    </div><br>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="Enter Price" type="text" class="form-control">
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" placeholder="Enter Country" type="text" class="form-control" required>
                    </div>
                    </div>
                    
                    <div>
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" placeholder="Enter Location" type="text" class="form-control" required>
                    </div><br>
                    <button class="btn btn-dark add-btn mt-3">Add</button>
                    <br><br><br>
                </form>
            </div>

        </div>

    </body>